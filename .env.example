# ================================
# VERSO GENIUS UNIFIED - ENV CONFIG
# ================================

# App Configuration
NODE_ENV=development
PORT=12345
APP_NAME="Verso Genius Unified"
APP_VERSION=3.0.0

# ================================
# SUPABASE (Primary Database)
# ================================
# Get these from: https://supabase.com/dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ================================
# REDIS (Caching & Rate Limiting)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ================================
# AI GENERATION (OpenAI + Ollama)
# ================================
# OpenAI (for production rhyme generation)
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.8

# Ollama (local LLM for validation/fallback)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest

# ================================
# AUTHENTICATION
# ================================
# JWT Configuration (for API-to-API communication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# ================================
# CORS
# ================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://your-domain.com

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW=900000      # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=300   # Max requests per window
RATE_LIMIT_AI_MAX=50          # Max AI generations per hour

# ================================
# FILE UPLOADS (Optional)
# ================================
MAX_FILE_SIZE=10485760        # 10MB in bytes
UPLOAD_DIR=./uploads

# ================================
# N8N AUTOMATION (Optional)
# ================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key

# ================================
# MONITORING & LOGGING (Optional)
# ================================
SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=info                # error, warn, info, debug

# ================================
# WEBSOCKET (for battles)
# ================================
WS_PORT=12346
WS_PATH=/ws

# ================================
# DEVELOPMENT
# ================================
# Set to 'true' to enable debug logs
DEBUG=false
# Set to 'true' to enable source maps
SOURCEMAPS=true
