{
  "name": "verso-genius-unified",
  "version": "3.0.0",
  "type": "module",
  "description": "Verso Genius Unified - The Ultimate Brazilian Rap Training Platform",
  "author": "Lucas Tigre",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:ui": "vite",
    "dev:api": "tsx watch src/api/server.ts",
    "build": "tsc && vite build",
    "build:ui": "vite build",
    "build:api": "tsc",
    "preview": "vite preview --port 3000",
    "deploy": "npm run build && wrangler pages deploy dist",
    "typecheck": "tsc --noEmit",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "setup:fts": "tsx night-crawler/scripts/setup-fts5.ts",
    "sync:fts": "tsx scripts/sync-fts5.ts",
    "seed": "tsx scripts/seed-database.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:generator": "vitest run --config night-crawler/vitest.config.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.6",
    "@supabase/supabase-js": "^2.45.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "framer-motion": "^11.15.0",
    "hono": "^4.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.468.0",
    "openai": "^6.15.0",
    "pg": "^8.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.12.0",
    "stripe": "^20.3.1",
    "ws": "^8.18.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.1.2",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16",
    "wrangler": "^3.78.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
