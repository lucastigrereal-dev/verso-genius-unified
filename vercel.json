{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev:ui",
  "installCommand": "npm install --include=dev",
  "framework": "vite",
  "regions": ["gru1"],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
